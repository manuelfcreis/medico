<div class="dashboard">
  <div class="left-bar">
    <%= render 'shared/profile', locals: { user: @user } %>
    <% if @user.class.to_s.downcase == 'patient' %>
      <div class="medications">
        medications
         <%#= render 'shared/medications', locals: { user: user } %>
      </div>
    <% else %>
      <div class="link-list">
        link list
        <%#= render 'shared/link_list' %>
      </div>
    <% end %>
  </div>
  <% if @user.class.to_s.downcase == 'patient' %>
    <div class="center-bar">
      <div class="center">
        <div class="search_dash">
          search bar
        </div>
        <div class="dash-main">
          Main Dashboard
        </div>
        <div class="dash-cards">
          Card list
        </div>
      </div>
    </div>
    <div class="right-bar">
      <div class="appointments">
        Appointments
      </div>
      <div class="documents">
        DOcuments
      </div>
    </div>
  <% else %>
    <div class="right-center-bar">
      <div class="center">
        <div class="search-dash">
            Search bar
        </div>
        <div class="dash-main <%= current_class %>">
          <div class="past">
            <% if @user.appointments.where(status: "done").last.nil? %>
              You didn't have a past appointment
            <% else %>
              <%= @user.appointments.where(status: "done").last %>
            <% end %>
          </div>
          <div class="upcoming">
            <% if @user.appointments.where(status: "scheduled").empty? %>
              You don't have a scheduled appointment
            <% else %>
              <%= @user.appointments.where(status: "scheduled").order(:date).first %>
            <% end %>
          </div>
          </div>
        <div class="dash-card">
          <ul class="list-group">
          <% @user.patients.each do |p| %>
            <li class="list-group-item">
              <%= render 'shared/doctor_card', locals: { patient: p } %>
            </li>
          <% end %>
        </ul>
        </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
