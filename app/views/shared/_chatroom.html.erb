<%= action_cable_meta_tag %>

<div id="chatroom">
  <div class="title">
    This is the title of the chat
  </div>
  <div class="body">
    This is the body of the chat
  </div>
  <div class="input">
    <%= form_tag('#', class: 'form-group') do %>
      <%= text_field_tag(:input, "", placeholder: "Enter your message", class: 'form-control', id: 'content') %>
      <%= button_tag(class: 'send btn btn-white') do %>
        <%= icon('paper-plane-o')  %>
      <% end %>
    <% end %>
  </div>
</div>
