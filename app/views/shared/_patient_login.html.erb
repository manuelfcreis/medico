<div id="patient-login" class="login hidden">
	<div class="log-in-form">
    <div class ="col-sm-6">
      <h2>Please Log-in here</h2>

      <%= simple_form_for(:patient, :url => session_path(:patient)) do |f| %>
      <%= f.text_field :email, placeholder: "e-mail", class: 'text-field' %>
      <%= f.password_field :password, placeholder: "password", class: 'text-field' %>
      <%= f.input :remember_me, as: :boolean %>
      <div class="buttons">
        <%= f.submit 'Log- in', class: 'btn patient' %>
        <p><%= link_to "Forgot your password?", new_password_path(:patient) %></p>
      </div>
      <% end %>
    </div>
  </div>

  <div class="sign-up-form">
    <div class= "col-sm-6">
      <h2>
      Sign Up</h2>
      <%= simple_form_for(:patient, :url => registration_path(:patient)) do |f| %>
      <%= f.text_field :email, placeholder: "e-mail", class: 'text-field' %>
      <%= f.password_field :password, placeholder: "password", class: 'text-field' %>
      <%= f.password_field :password, placeholder: "confirm password", class: 'text-field' %>
      <%= f.input :remember_me, as: :boolean %>
      <div class="buttons">
        <%= f.submit 'Sign up', class: 'btn patient' %>
        <p><%= link_to "Forgot your password?", new_password_path(:patient) %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>