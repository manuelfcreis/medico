<% if locals[:user].class.to_s == "Patient" %>
<div class="doctor-card">
  <div class="card-avatar">
  <% if locals[:user].avatar.url.nil? %>
    <%= image_tag "https://s3-eu-west-1.amazonaws.com/medi-co/Avatars/Circle.png" %>
  <% else %>
    <%= image_tag locals[:user].avatar.url %>
  <% end %>
  <p><%= locals[:user].first_name %> <br><%= locals[:user].last_name %></p>
  </div>
  <div class="card-body">
    <% @apts = locals[:user].appointments.where(doctor_id: current_active.id).where.not(status: "cancelled").where.not(status: "pending") %>
    <% if @apts.nil? %>
      <% if @apts.last.status == "scheduled" %>
        Next Appointment: <%= @apts.last.date %>
      <% elsif @apts.last.status == "done" %>
        Last Appointment: <%= @apts.last.date %>
      <% end %>
      <% if @apts.prescriptions.last.nil? %>
        No previous prescriptions
      <% else %>
        <% link_to @apts.prescriptions.last do %>
          Previous Prescription
        <% end %>
      <% end %>
    <% else %>
      No previous appointments
    <% end %>

  </div>
  <div class="card-button <%= current_class %>">
    <%= button_to '#' do %>
      <%= icon('link') %>
    <% end %>
    <%= button_to locals[:user], method: :get, form_class: "important" do %>
      <%= icon('paper-plane-o') %>
    <% end %>
    <%= button_to '#' do %>
      <%= icon('calendar') %>
    <% end %>
  </div>
</div>

<% else %>

<div class="patient-card">
  <div class="card-avatar">
  <% if locals[:user].avatar.url.nil? %>
    <%= image_tag "https://s3-eu-west-1.amazonaws.com/medi-co/Avatars/Circle.png" %>
  <% else %>
    <%= image_tag locals[:user].avatar.url %>
  <% end %>
  <p><%= locals[:user].first_name %> <br><%= locals[:user].last_name %></p>
  </div>
  <div class="card-body">
    <% @apts = locals[:user].appointments.where(doctor_id: current_active.id).where.not(status: "cancelled").where.not(status: "pending") %>
    <% if @apts.nil? %>
      <% if @apts.last.status == "scheduled" %>
        Next Appointment: <%= @apts.last.date %>
      <% elsif @apts.last.status == "done" %>
        Last Appointment: <%= @apts.last.date %>
      <% end %>
      <% if @apts.prescriptions.last.nil? %>
        No previous prescriptions
      <% else %>
        <% link_to @apts.prescriptions.last do %>
          Previous Prescription
        <% end %>
      <% end %>
    <% else %>
      No previous appointments
    <% end %>

  </div>
  <div class="card-button <%= current_class %>">
    <%= button_to '#' do %>
      <%= icon('paperclip') %>
    <% end %>
    <%= button_to locals[:user], method: :get, form_class: "important" do %>
      <%= icon('paper-plane-o') %>
    <% end %>
    <%= button_to '#', remote: true, 'data-toggle': 'modal', 'data-target': "#appointment-form-#{locals[:user].id}" do %>
      <%= icon('calendar') %>
    <% end %>
  </div>
</div>

<%= render 'appointments/new', locals: { user: locals[:user] } %>

<% end %>

