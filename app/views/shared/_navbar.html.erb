<div class="navbar-wagon nav-<%= current_class %>" id="navbar">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <% if current_class == "doctor" %>
    <%= image_tag "https://s3-eu-west-1.amazonaws.com/medi-co/Logos/medi-co-green.png" %>
    <% else %>
    <%= image_tag "https://s3-eu-west-1.amazonaws.com/medi-co/Logos/medi-co.png" %>
    <% end %>
  <% end %>

  <div class="navbar-wagon-right hidden-xs hidden-sm">
  <!-- Right Navigation -->
  <% unless doctor_signed_in? or patient_signed_in? %>
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <div class="navbar-wagon-item navbar-wagon-link">Our Services</div>
    <div class="navbar-wagon-item navbar-wagon-link">Questions</div>
    <div class="navbar-wagon-item navbar-wagon-link">Testimonials</div>
  </div>
  <% end %>
  <% if doctor_signed_in? %>
    <%= link_to 'Dashboard', dashboard_path, class: 'navbar-wagon-item navbar-wagon-link' %>
    <%= link_to t(".sign_out", default: "Logout"), destroy_doctor_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
  </div>
  <% elsif patient_signed_in? %>
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to 'Dashboard', dashboard_path, class: 'navbar-wagon-item navbar-wagon-link' %>
    <%= link_to t(".sign_out", default: "Logout"), destroy_patient_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
    <% else %>

    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), sign_in_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    </div>
  </div>


  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <% if doctor_signed_in? %>

          <%= link_to 'Dashboard', dashboard_path %>
          <%= link_to t(".sign_out", default: "Logout"), destroy_doctor_session_path, method: :delete %>

          <% elsif patient_signed_in? %>
          <%= link_to 'Dashboard', dashboard_path %>
          <%= link_to t(".sign_out", default: "Logout"), destroy_patient_session_path, method: :delete %>
          <% else %>

          <!-- Login link (when logged out) -->
          <%= link_to t(".sign_in", default: "Login"), sign_in_path %>
          <% end %>

        </li>
        <li><a href="#">Our Services</a></li>
        <li><a href="#">Questions</a></li>
      </ul>
    </div>
  </div>
</div>

