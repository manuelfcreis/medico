<% if request.fullpath[1] == 'p' %>

<div class="login">
	<div class="log-in-form">
		<h2>Please Log-in here</h2>

      <%= simple_form_for(:patient, :url => session_path(:patient)) do |f| %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :remember_me, as: :boolean %>
        <div class="buttons">
          <%= f.submit 'Sign in', class: 'btn patient' %>
          <p><%= link_to "Forgot your password?", new_password_path(:patient) %></p>
        </div>
      <% end %>
	</div>

	<div class="sign-up-form">
		<h2>
		Sign Up</h2>
      <%= simple_form_for(:patient, :url => registration_path(:patient)) do |f| %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :remember_me, as: :boolean %>
        <div class="buttons">
          <%= f.submit 'Sign in', class: 'btn patient' %>
          <p><%= link_to "Forgot your password?", new_password_path(:patient) %></p>
        </div>
      <% end %>
	</div>
</div>

<% else %>

